// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // IMPORTANTE: Ahora es postgresql
  url      = env("DATABASE_URL")
}

// --- MODELOS DE DATOS ---

model Event {
  id            String   @id @default(uuid())
  date          String
  year          Int
  title         String
  description   String
  category      String
  
  imageUrl      String
  imageCredit   String
  imagePosition String?

  story         String
  funFact       String
  
  // Relaciones
  tags          Tag[]
  glossary      GlossaryTerm[]
  favoritedBy   Favorite[]      // Relación inversa: ¿A quién le gusta esto?

  // Lógica de rotación diaria
  lastShownAt   DateTime? 

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Tag {
  id      String  @id @default(uuid())
  name    String
  events  Event[]
}

model GlossaryTerm {
  id         String @id @default(uuid())
  term       String
  definition String
  
  eventId    String
  event      Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

// --- USUARIOS Y AUTH ---

model User {
  id        String   @id // Sin @default: usaremos el mismo ID que genere Supabase Auth
  email     String   @unique
  name      String?
  
  // Preparado para el futuro
  isPremium Boolean  @default(false) 
  
  favorites Favorite[]
  createdAt DateTime @default(now())
}

model Favorite {
  id        String   @id @default(uuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  assignedAt DateTime @default(now())

  // Evita duplicados: un usuario no puede dar "like" dos veces al mismo evento
  @@unique([userId, eventId])
}